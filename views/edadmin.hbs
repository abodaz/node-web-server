<!DOCTYPE html>
<html>
{{>adminheader}}

<body>



    <div id="wrapper">
        {{>adminPar}} 
        
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Edit Infomation</h2>
                    </div>
                </div>

                <div class="col-lg-12 ">
                    <form class="commit" action="/edadmin" method="POST">
                    <div class="row">
                        <p></p>
                        <div class="col-lg-1">
                            <label>FirstName</label>
                        </div>
                        <div class="col-lg-3">
                            <input name="fname" value="{{first_name}}" class="form-control" />
                        </div>
                        <div class="col-lg-1 ">
                            <label>LastName</label>
                        </div>
                        <div class="col-lg-3">
                            <input name="lname" value="{{last_name}}" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <p></p>
                        <div class="col-lg-1">
                            <label>UserName</label>
                        </div>
                        <div class="col-lg-3">
                            <input name="user_name" value="{{user_name}}" class="form-control" />
                        </div>
                        <div class="col-lg-1">
                            <label>Email</label>
                        </div>
                        <div class="col-lg-3">
                            <input name="user_email" value="{{user_email}}" type="email" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <p></p>
                        <div class="col-lg-1 ">
                            <label>OldPass</label>
                        </div>
                        <div class="col-lg-3">
                            <input type="password" class="form-control" />
                        </div>
                        <div class="col-lg-1 ">
                            <label>NewPass</label>
                        </div>
                        <div class="col-lg-3">
                            <input type="password" class="form-control" />
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-lg-12 col-md-6">
                            
                                <label class="col-lg-9 col-md-3"></label>
                                <button class="col-lg-2" type="submit" >Commit</button>
                           
                        </div>
                    </div>

                 </form>
                </div>
            </div>
        </div>
    </div>

    {{>adminfooter}}


</body>

</html>