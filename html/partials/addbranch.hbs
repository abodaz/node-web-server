<div class="col-lg-12">
    <div class="row">
        <p></p>
        <div class="col-lg-2" >
            <label>Add Branch Name</label>
        </div>
        <div class="col-lg-4">
            <input class="form-control" name="branch_name"/>
        </div>
        <div class="col-lg-1">
            <label>Branch Number</label>
        </div>
        <div class="col-lg-1">
            <input class="form-control" name="branch_number" />
        </div>
    </div>
    <div class="row">
        <p></p>
        <div class="col-lg-1">
            <label>Country</label>
        </div>
        <div class="col-lg-3">
            <select name="country"> <!--Supplement an id here instead of using 'name'-->           
            {{{countries}}}
            </select>
        </div>
        <div class="col-lg-1">
            <label>City</label>
        </div>
        <div class="col-lg-3">
            <select name="city"> <!--Supplement an id here instead of using 'name'-->           
            {{{cities}}}
            </select>
        </div>
    </div>
    <div class="row">
        <p></p>
        <div class="col-lg-1">
            <label>Street</label>
        </div>
        <div class="col-lg-3">
            <input class="form-control" name="street"/>
        </div>
        
    </div>
    <div class="row">
        <p></p>
        <div class="col-lg-2">
            <label>Select Maneger</label>
        </div>
        <div class="col-lg-4">
            <select name="select"> <!--Supplement an id here instead of using 'name'-->           
            {{{managers}}}
            </select>
        </div>
</div>
